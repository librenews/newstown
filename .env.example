# Database
DATABASE_URL=postgresql://localhost/newstown

# AI Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Search Providers
BRAVE_API_KEY=BSA...
# SERP_API_KEY=... (optional alternative)
# GOOGLE_SEARCH_API_KEY=... (optional alternative)

# System
LOG_LEVEL=INFO
ENVIRONMENT=development

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
TASK_POLL_INTERVAL_SECONDS=5
AGENT_HEARTBEAT_INTERVAL_SECONDS=30

# Story Detection
MIN_NEWSWORTHINESS_SCORE=0.6
MAX_STORIES_PER_DAY=20

# Governance
MIN_SOURCES_REQUIRED=2
REQUIRE_FACT_VERIFICATION=true
AUTO_PUBLISH_ENABLED=false

# Email Publishing (Phase 3)
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM_ADDRESS=news@newstown.example.com
EMAIL_FROM_NAME=News Town
